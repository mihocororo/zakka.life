<div class="col-md-8 offset-md-1">
<table class="table">
<h4 class="mark"><%= @post_shop.area.name %>一覧</h4>
<thead>
    <tr>
      <th>店舗画像</th>
      <th>店舗名</th>
      <th>説明</th>
      <th>エリア</th>
      <th>投稿者</th>
      </tr></thead>
      <tr>
      <td><%= image_tag @post_shop.image, size: "100x100" %></td>
      <td><%= @post_shop.name %></td>
      <td><%= @post_shop.introduction %></td>
      <td><%= @post_shop.area.name %></td>
      <td><%= @post_shop.customer.nickname %></td>
</thead>

<h5>総合評価</h5>

<%= form_with model: @shop_comment, url: shops_path do |f| %>
   <div class="post_form">
    <%= f.radio_button :overall, 5 ,id: 'star1'%>
    <label for="star1"><span class="text">最高</span>★</label>

    <%= f.radio_button :overall, 4 ,id: 'star2'%>
    <label for="star2"><span class="text">良い</span>★</label>

    <%= f.radio_button :overall, 3 ,id: 'star3'%>
    <label for="star3"><span class="text">普通</span>★</label>

    <%= f.radio_button :overall, 2 ,id: 'star4'%>
    <label for="star4"><span class="text">悪い</span>★</label>

    <%= f.radio_button :overall, 1 ,id: 'star5'%>
    <label for="star5"><span class="text">最悪</span>★</label>
 </div>
    <%= f.submit '評価する' %>
 <% end %>



