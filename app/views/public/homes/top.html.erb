
<main>
<h4>エリア一覧</h4>

<tbody>
    <% @areas.each do |area| %>

      <td>
        <%= link_to area.name, "/areas/#{area.id}", class: "text-secondary" %>
      </td>
    <% end %>
</tbody>



<div class="d-grid gap-2 d-md-block">
<a class="btn btn-secondary" href="/shops" type="submit">
  店舗一覧</br>
  <img src="/assets/shop.jpg" width="400" height="300" border="0" onMouseOver="this.src='/assets/room2.jpg'"　width="400" height="300" onMouseOut="this.src='/assets/shop.jpg'" />
</a>

<a class="btn btn-secondary" href="/rooms" type="submit">
  お部屋紹介</br>
  <img src="/assets/room.jpg" width="400" height="300" border="0" onMouseOver="this.src='/assets/room2.jpg'"　width="400" height="300" onMouseOut="this.src='/assets/room.jpg'" />
</a>
</div>
</main>